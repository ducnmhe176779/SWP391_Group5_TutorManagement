<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>controller.Customer.HomePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <!-- CV Controller Mapping -->
    <servlet>
        <servlet-name>CVController</servlet-name>
        <servlet-class>UserController.CVController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CVController</servlet-name>
        <url-pattern>/cv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CVController</servlet-name>
        <url-pattern>/cv.jsp</url-pattern>
    </servlet-mapping>
    <!-- Logout Controller Mapping -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>UserController.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- Profile Controller Mapping -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>UserController.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <!-- CreateScheduleServlet - Adding explicit mapping for compatibility -->
    <servlet>
        <servlet-name>CreateScheduleServlet</servlet-name>
        <servlet-class>controller.Tutor.CreateScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateScheduleServlet</servlet-name>
        <url-pattern>/tutor/schedule-management</url-pattern>
    </servlet-mapping>
    <!-- BookingCalendarServlet - Adding explicit mapping -->
    <servlet>
        <servlet-name>BookingCalendarServlet</servlet-name>
        <servlet-class>UserController.BookingCalendarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingCalendarServlet</servlet-name>
        <url-pattern>/booking-calendar</url-pattern>
    </servlet-mapping>
    
    <!-- BookScheduleServlet - Adding explicit mapping -->
    <servlet>
        <servlet-name>BookScheduleServlet</servlet-name>
        <servlet-class>UserController.BookScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookScheduleServlet</servlet-name>
        <url-pattern>/BookSchedule</url-pattern>
    </servlet-mapping>
    
    <!-- Tutor Detail Controller Mapping -->
    <servlet>
        <servlet-name>TutorDetailController</servlet-name>
        <servlet-class>UserController.TutorDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TutorDetailController</servlet-name>
        <url-pattern>/Tutordetail</url-pattern>
    </servlet-mapping>
</web-app>
